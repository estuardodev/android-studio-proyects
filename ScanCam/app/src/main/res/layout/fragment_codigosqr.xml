            android:layout_marginTop="400dp"/>

        <Button
            android:id="@+id/btnScanQR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Scan"
            android:layout_centerInParent="true"/>


    </RelativeLayout>
</FrameLayout>